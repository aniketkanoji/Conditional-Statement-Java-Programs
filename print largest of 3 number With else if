import java.util.*;

public class Else_if {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int a =  1, b = 3,  c = 6;

       if (a>b && a>c){
       System.out.println("a is largest no., it is "+a);
       } 
       else if(b<a && b>c){
        System.out.println("b is largest no., it is "+b);    
       }
       else 
       {
        System.out.println("c is largest no., it is "+c);
       }
       
    }
}
